# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_size = 2
indent_style = space

[*.py]
indent_style = space
indent_size = 4
max_line_length = 80

[*.sh,*.bash]
indent_style = space
indent_size = 2
max_line_length = 80

[*.vim, .vimrc, vimrc]
indent_style = space
indent_size = 2
max_line_length = 80

[*.md, *.markdown]
indent_style = space
indent_size = 2
max_line_length = 80

[*.txt, *.]
indent_style = space
indent_size = 2
max_line_length = 80
